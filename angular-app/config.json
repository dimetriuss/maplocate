{
  "bases": {
    "dist": "../static/admin/",
    "src": "src/"
  },
  "path": {
    "scripts": [
      "src/app/**/*module*.js",
      "src/common/**/*module*.js",
      "src/app/**/*.js",
      "src/common/**/*.js"
    ],
    "libs": [
      "vendor/lodash/lodash.js",
      "vendor/jquery/dist/jquery.js",
      "vendor/bootstrap/dist/js/bootstrap.min.js",
      "vendor/toastr/toastr.min.js",
      "vendor/jquery-ui/jquery-ui.min.js",

      "vendor/angular/angular.min.js",
      "vendor/angular-resource/angular-resource.js",
      "vendor/angular-local-storage/dist/angular-local-storage.js",
      "vendor/angular-ui-router/release/angular-ui-router.js",
      "vendor/angular-ui-select/dist/select.js",
      "vendor/angular-ui-sortable/sortable.js",
      "vendor/angular-sanitize/angular-sanitize.js",
      "vendor/ng-table/dist/ng-table.js",
      "vendor/angular-sortable-view/src/angular-sortable-view.js",

      "vendor/angular-strap/dist/modules/dimensions.js",
      "vendor/angular-strap/dist/modules/tooltip.js",
      "vendor/angular-strap/dist/modules/tooltip.tpl.js",

      "vendor/angular-bootstrap-switch/dist/angular-bootstrap-switch.js",
      "vendor/bootstrap-switch/dist/js/bootstrap-switch.js"
    ],
    "sass": {
      "src": ["src/scss/app.scss"],
      "watch": ["src/scss/**/*.scss"],
      "conf": {"outputStyle": "nested"}
    },
    "css_libs": [
      "vendor/bootstrap/dist/css/bootstrap.min.css",
      "vendor/ng-table/dist/ng-table.min.css",
      "vendor/toastr/toastr.min.css",
      "vendor/angular-ui-select/dist/select.min.css",
      "vendor/font-awesome/css/font-awesome.min.css",
      "vendor/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css"
    ],
    "fonts": [
      "vendor/font-awesome/fonts/*.*",
      "vendor/bootstrap/fonts/*.*"
    ],
    "html": [
      "src/**/*.html"
    ],
    "copy": [
      "src/assets/**/*"
    ]
  }
}
